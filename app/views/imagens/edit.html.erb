<h1>Editing imagen</h1>

<% form_for(@imagen) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :comentario %><br />
    <%= f.text_field :comentario %>
  </p>
  <p>
    <%= f.label :nombre %><br />
    <%= f.text_field :nombre %>
  </p>
  <p>
    <%= f.label :content_type %><br />
    <%= f.text_field :content_type %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @imagen %> |
<%= link_to 'Back', imagens_path %>
