<h1>New producto</h1>

<% form_for(@producto, :html => { :multipart => true }) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :nombre %><br />
    <%= f.text_field :nombre %>
  </p>
<p>
	
	
    <%= f.label :proveedor_id %><br />
	

	<%= collection_select(:producto, :proveedor_ids, Proveedor.find(:all),:id, :nombre, {},{:multiple=>"multiple",:name=>'producto[proveedor_ids][]',:size=>"5",:style => "width: 100px"})%> 

   
  </p>  
<p>
    <%= f.label :descripcion %><br />
    <%= f.text_area :descripcion %>
  </p>
  <p>
    <%= f.label :precio %><br />
    <%= f.text_field :precio %>
  </p>
<h3>Elija su imagen:</h3>
<%= file_field(:imagen,"uploaded_picture") %><br/>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', productos_path %>
